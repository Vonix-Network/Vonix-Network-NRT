{
  "name": "vonix-network-community",
  "version": "1.1.2",
  "description": "Minecraft Community Platform with Live Discord Chat, Server Management, and Admin Dashboard",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "backup": "node scripts/backup-db.js",
    "backup:list": "node scripts/backup-db.js list",
    "backup:clean": "node scripts/backup-db.js clean",
    "health-check": "node scripts/health-check.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs vonix-network",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "postinstall": "echo '\nâœ… Backend dependencies installed. Run npm run install-all to install all dependencies.\n'"
  },
  "keywords": [
    "minecraft",
    "community",
    "discord",
    "server-management",
    "admin-dashboard",
    "feature-toggles",
    "setup-wizard"
  ],
  "author": "Vonix.Network",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "better-sqlite3": "^9.2.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "ws": "^8.16.0",
    "express-validator": "^7.0.1",
    "dompurify": "^3.0.8",
    "jsdom": "^23.2.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "node-cache": "^5.1.2",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "@sentry/node": "^7.99.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/index.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
